# Thumbnail Generator Configuration

# Server
PORT=8400
ENV=development

# Database
DATABASE_URL=postgresql://postgres:wave@postgres:5432/wave

# Redis (for caching)
REDIS_URL=redis://redis:6379

# Image Generation Provider
# Options: openai, stability, local
# - openai: DALL-E (paid, highest quality)
# - stability: Stability AI (paid, high quality)
# - local: Stable Diffusion (FREE, good quality, requires GPU)
IMAGE_PROVIDER=local

# OpenAI DALL-E (Optional - Paid)
OPENAI_API_KEY=your-openai-key
DALLE_MODEL=dall-e-3
DALLE_SIZE=1792x1024
DALLE_QUALITY=hd

# Stability AI (Optional - Paid)
STABILITY_API_KEY=your-stability-key
STABILITY_MODEL=stable-diffusion-xl-1024-v1-0

# Local Stable Diffusion (FREE)
SD_MODEL=stabilityai/stable-diffusion-xl-base-1.0
SD_CACHE_DIR=./models/stable-diffusion
SD_USE_REFINER=false

# Thumbnail Configuration
THUMBNAIL_WIDTH=1280
THUMBNAIL_HEIGHT=720
DEFAULT_FORMAT=PNG
QUALITY=95

# Text Overlay
DEFAULT_FONT_SIZE=80
DEFAULT_FONT_COLOR=white
DEFAULT_STROKE_COLOR=black
DEFAULT_STROKE_WIDTH=3
FONTS_DIR=./fonts

# Storage
OUTPUT_DIR=./thumbnails
CACHE_THUMBNAILS=true
CACHE_EXPIRY_HOURS=24

# AI Personality Integration
AI_PERSONALITY_URL=http://ai-personality:8200
USE_AI_PROMPTS=true

# Performance
MAX_CONCURRENT_GENERATIONS=3
GENERATION_TIMEOUT=120

# Logging
LOG_LEVEL=INFO
