# Social Publisher Configuration

# Server
PORT=8600
ENV=development

# Database
DATABASE_URL=postgresql://postgres:wave@postgres:5432/wave

# Redis
REDIS_URL=redis://redis:6379

# Instagram Configuration
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password
INSTAGRAM_USE_PROXY=false
INSTAGRAM_PROXY=http://proxy:port

# TikTok Configuration
TIKTOK_SESSION_ID=your_session_id
TIKTOK_USE_PROXY=false

# Facebook Configuration
FACEBOOK_ACCESS_TOKEN=your_page_access_token
FACEBOOK_PAGE_ID=your_page_id
FACEBOOK_APP_ID=your_app_id
FACEBOOK_APP_SECRET=your_app_secret

# LinkedIn Configuration
LINKEDIN_ACCESS_TOKEN=your_access_token
LINKEDIN_CLIENT_ID=your_client_id
LINKEDIN_CLIENT_SECRET=your_client_secret

# Twitter/X (for consistency)
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret

# AI Integration
AI_PERSONALITY_URL=http://ai-personality:8200
THUMBNAIL_GENERATOR_URL=http://thumbnail-generator:8400
USE_AI_CAPTIONS=true
USE_AI_HASHTAGS=true

# Directories
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
SESSIONS_DIR=./sessions

# Logging
LOG_LEVEL=INFO
