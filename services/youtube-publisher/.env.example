# YouTube Publisher Configuration

# Server
PORT=8500
ENV=development

# Database
DATABASE_URL=postgresql://postgres:wave@postgres:5432/wave

# Redis
REDIS_URL=redis://redis:6379

# YouTube OAuth
YOUTUBE_CLIENT_ID=your-client-id
YOUTUBE_CLIENT_SECRET=your-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:8500/oauth2callback

# Upload Configuration
DEFAULT_PRIVACY=private
DEFAULT_CATEGORY=22
MAX_RETRIES=3

# Integration
THUMBNAIL_GENERATOR_URL=http://thumbnail-generator:8400
AUTO_GENERATE_THUMBNAILS=true
AI_PERSONALITY_URL=http://ai-personality:8200
USE_AI_DESCRIPTIONS=true
USE_AI_TAGS=true

# Directories
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
CREDENTIALS_DIR=./credentials

# Logging
LOG_LEVEL=INFO
