# Social Ingest Service Configuration

# Server
PORT=8100
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:wave@postgres:5432/wave

# Redis (for caching and real-time data)
REDIS_URL=redis://redis:6379

# Discord
DISCORD_BOT_TOKEN=your-bot-token
DISCORD_GUILD_IDS=guild1,guild2,guild3

# Twitch IRC
TWITCH_USERNAME=your-bot-username
TWITCH_OAUTH_TOKEN=oauth:your-token
TWITCH_CHANNELS=channel1,channel2,channel3

# Twitch API
TWITCH_CLIENT_ID=your-client-id
TWITCH_CLIENT_SECRET=your-client-secret

# YouTube Data API
YOUTUBE_API_KEY=your-api-key
YOUTUBE_CHANNEL_IDS=channel1,channel2

# Twitter/X API
TWITTER_API_KEY=your-api-key
TWITTER_API_SECRET=your-api-secret
TWITTER_BEARER_TOKEN=your-bearer-token

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Data Retention (days)
RETENTION_DAYS=30

# Logging
LOG_LEVEL=info
