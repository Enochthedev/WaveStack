# AI Personality Service Configuration

# Server
PORT=8200
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:wave@postgres:5432/wave

# Redis (for caching and context)
REDIS_URL=redis://redis:6379

# AI Provider (choose one or use both)
AI_PROVIDER=openai  # openai, anthropic, or local

# OpenAI
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Local LLM (Ollama)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama2

# Vector Database (ChromaDB)
CHROMA_URL=http://localhost:8000
CHROMA_COLLECTION=wavestack_memories

# Personality Configuration
PERSONALITY_TEMPERATURE=0.8
PERSONALITY_MAX_TOKENS=500
CONTEXT_WINDOW=20
MEMORY_RETENTION_DAYS=90

# Learning Sources
LEARN_FROM_DISCORD=true
LEARN_FROM_TWITCH=true
LEARN_FROM_TELEGRAM=true
LEARN_FROM_TWITTER=true
LEARN_FROM_STREAMS=true

# Features
AUTO_RESPOND_ENABLED=true
AUTO_POST_TWITTER=false
SENTIMENT_FILTERING=true
CONTROVERSY_AVOIDANCE=true

# Twitter API (for auto-posting)
TWITTER_API_KEY=your-twitter-key
TWITTER_API_SECRET=your-twitter-secret
TWITTER_ACCESS_TOKEN=your-access-token
TWITTER_ACCESS_SECRET=your-access-secret
TWITTER_BEARER_TOKEN=your-bearer-token

# Logging
LOG_LEVEL=info
