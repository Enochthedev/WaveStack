# AI Personality Service Configuration

# Server
PORT=8200
ENV=development

# Database
DATABASE_URL=postgresql://postgres:wave@postgres:5432/wave

# Redis (for caching and context)
REDIS_URL=redis://redis:6379

# AI Provider Selection
# Options: openai, anthropic, ollama, huggingface, local
# - openai: Requires API key (paid)
# - anthropic: Requires API key (paid)
# - ollama: FREE! Local models (Llama 2, Mistral, CodeLlama, etc.)
# - huggingface: FREE! Run models locally with transformers
# - local: Use your own fine-tuned model from ML training service
AI_PROVIDER=ollama  # Default to FREE local option!

# OpenAI (Optional - Paid)
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic Claude (Optional - Paid)
ANTHROPIC_API_KEY=your-anthropic-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Ollama (FREE - Local LLM)
# Install: curl https://ollama.ai/install.sh | sh
# Models: ollama pull llama2, ollama pull mistral, ollama pull codellama
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama2  # llama2, mistral, codellama, vicuna, etc.

# Hugging Face Transformers (FREE - Local)
# Requires GPU for best performance, but works on CPU
# Popular models: meta-llama/Llama-2-7b-chat-hf, mistralai/Mistral-7B-Instruct-v0.1
HUGGINGFACE_MODEL=meta-llama/Llama-2-7b-chat-hf
HUGGINGFACE_CACHE_DIR=./models/huggingface

# ML Training Service (FREE - Your Fine-Tuned Model)
# Use this after training your own model with the ML training service
ML_TRAINING_URL=http://ml-training:8300
FINETUNED_MODEL_PATH=./models/finetuned

# Vector Database (ChromaDB)
CHROMA_PATH=./data/chroma
CHROMA_COLLECTION=wavestack_memories

# Personality Configuration
PERSONALITY_TEMPERATURE=0.8
PERSONALITY_MAX_TOKENS=500
CONTEXT_WINDOW=20
MEMORY_RETENTION_DAYS=90

# Learning Configuration
BATCH_SIZE=32
LEARNING_RATE=0.001
MIN_CONFIDENCE=0.7

# Learning Sources
LEARN_FROM_DISCORD=true
LEARN_FROM_TWITCH=true
LEARN_FROM_TELEGRAM=true
LEARN_FROM_TWITTER=true
LEARN_FROM_STREAMS=true

# Features
AUTO_RESPOND_ENABLED=true
AUTO_POST_TWITTER=false
SENTIMENT_FILTERING=true
CONTROVERSY_AVOIDANCE=true
NEGATIVITY_THRESHOLD=-0.5

# Twitter API (for auto-posting)
TWITTER_API_KEY=your-twitter-key
TWITTER_API_SECRET=your-twitter-secret
TWITTER_ACCESS_TOKEN=your-access-token
TWITTER_ACCESS_SECRET=your-access-secret
TWITTER_BEARER_TOKEN=your-bearer-token

# Content Generation
POST_FREQUENCY_HOURS=4
MIN_ENGAGEMENT_SCORE=0.6
HASHTAG_LIMIT=3

# Logging
LOG_LEVEL=INFO
