# Twitch Bot Configuration

# Twitch IRC
TWITCH_BOT_USERNAME=your-bot-username
TWITCH_BOT_OAUTH=oauth:your-token-here
TWITCH_CHANNEL=your-channel-name

# Twitch API
TWITCH_CLIENT_ID=your-client-id
TWITCH_CLIENT_SECRET=your-client-secret

# WaveStack API
WAVESTACK_API_URL=http://core-app:3000
WAVESTACK_CLIENT_ID=twitch-bot-service
WAVESTACK_CLIENT_SECRET=your-secret-here

# Redis
REDIS_URL=redis://redis:6379

# OBS WebSocket
OBS_WEBSOCKET_URL=ws://localhost:4455
OBS_WEBSOCKET_PASSWORD=your-obs-password

# Bot Configuration
COMMAND_PREFIX=!
COMMAND_COOLDOWN=3000
MOD_ONLY_COMMANDS=ban,timeout,clear,settitle,setgame
VIP_ONLY_COMMANDS=commercial

# Auto Clip Detection
AUTO_CLIP_ENABLED=true
AUTO_CLIP_KEYWORDS=pog,clip,clipped,highlight
AUTO_CLIP_MIN_VIEWERS=10

# Stream Raiding
AUTO_RAID_ENABLED=false
RAID_TARGET_CHANNELS=channel1,channel2,channel3

# Shoutouts
AUTO_SHOUTOUT_RAIDERS=true
AUTO_SHOUTOUT_SUBS=true

# Moderation
SPAM_PROTECTION=true
LINK_PROTECTION=true
CAPS_PROTECTION=true
BANNED_WORDS=word1,word2,word3

# Logging
LOG_LEVEL=info
