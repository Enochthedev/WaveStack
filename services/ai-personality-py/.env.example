# AI Personality Service Configuration

# Server
PORT=8200
HOST=0.0.0.0
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:wave@postgres:5432/wave

# Redis
REDIS_URL=redis://redis:6379

# AI Providers
AI_PROVIDER=openai  # openai, anthropic, or both

# OpenAI
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Local LLM (Ollama - optional)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama2

# ChromaDB (Vector Database)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION=wavestack_memories

# Personality Configuration
PERSONALITY_TEMPERATURE=0.8
PERSONALITY_MAX_TOKENS=500
CONTEXT_WINDOW=20
MEMORY_RETENTION_DAYS=90
MIN_MEMORY_IMPORTANCE=5

# Learning Pipeline
LEARN_FROM_DISCORD=true
LEARN_FROM_TWITCH=true
LEARN_FROM_TELEGRAM=true
LEARN_FROM_TWITTER=true
LEARN_FROM_STREAMS=true
BATCH_SIZE=50
LEARNING_INTERVAL_MINUTES=5

# Content Generation
AUTO_RESPOND_ENABLED=true
AUTO_POST_TWITTER=false
CONTENT_REVIEW_REQUIRED=true
MIN_CONFIDENCE_SCORE=0.7

# Safety & Filtering
SENTIMENT_FILTERING=true
CONTROVERSY_AVOIDANCE=true
MIN_SENTIMENT_SCORE=-0.3
MAX_CONTROVERSY_LEVEL=5
CONTENT_MODERATION=true

# Twitter API (for auto-posting)
TWITTER_API_KEY=your-twitter-key
TWITTER_API_SECRET=your-twitter-secret
TWITTER_ACCESS_TOKEN=your-access-token
TWITTER_ACCESS_SECRET=your-access-secret
TWITTER_BEARER_TOKEN=your-bearer-token

# n8n Integration
N8N_WEBHOOK_URL=http://n8n:5678/webhook/
N8N_API_KEY=your-n8n-api-key

# Logging
LOG_LEVEL=INFO
